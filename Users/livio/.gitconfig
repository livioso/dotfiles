[user]
  name = Livio Bieri
  email = livio@livio.li
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  pager = true
[color "status"]
  added = green
  changed = red bold
  untracked = magenta bold
[color "branch"]
  remote = yellow
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[alias]
  tig = !tig
  fw = !open -g https://bitbucket.org/mr_karl/karl/commits/all
  lg = log --color --graph --pretty=format:'%Cred%h%Creset • %Cgreen%cr%Creset %Cblue%an %n ➟ %s' --abbrev-commit -7
  lga = log --color --graph --pretty=format:'%Cred%h%Creset • %Cgreen%cr%Creset %Cblue%an %n ➟ %s' --abbrev-commit
  tinder = add -p
  tt = add -p
  rt = checkout -p
  ciam = commit -am
  cim = commit -m
  cia = commit --verbose --untracked-files=no -a
  ci = commit --verbose --untracked-files=no
  co = checkout
  st = status --short --branch
  df = diff
  p = push
  # undo the last commit
  undo = reset --soft HEAD~
  uncommit = reset --soft HEAD^
  c = !clear
  clear = !clear
  exit = = !clear
[push]
  default = simple
[core]
  untrackedCache = true
  editor = nvim
  ignorecase = false
  pager = diff-so-fancy --patch-mode | less --tabs=2 -RFX
[commit]
  template = ~/.gitmessage
[branch "master"]
  mergeoptions = --no-ff
[help]
  autocorrect = 10
[diff]
	compactionHeuristic = true
[interactive]
	diffFilter = diff-so-fancy --patch-mode | less --tabs=2 -RFX
[gitsh]
  prompt = git • %c%D (%b) $%w
[tig]
  mouse = true
  tab-size = 2
  refresh-mode = auto
  line-number-display = true
[tig "color"]
  cursor = black green
[pull]
	rebase = true
